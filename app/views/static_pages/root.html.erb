<% if logged_in? %>
  <script type="text/javascript">
    window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
    ).html_safe %>
  </script>
  
  <script type="text/javascript">
    $(document).keydown(function(event) { 
      if (event.keyCode == 27) { 
        $('modal').hide();
      }
    });
  </script>

<% end %>

<main id="root"></main>
